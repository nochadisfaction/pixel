# syntax = docker/dockerfile:1

# Adjust NODE_VERSION as desired
ARG NODE_VERSION=22
FROM public.ecr.aws/bitnami/node:${NODE_VERSION}-debian-12 AS base

LABEL org.opencontainers.image.description="Pixelated Astro App for Azure"

# Install system dependencies and fix pnpm version conflicts
RUN DEBIAN_FRONTEND=noninteractive apt-get update && apt-get install -y \
    curl \
    ca-certificates 2>&1 | grep -v "rehash: warning.*ca-certificates.crt" || true \
    && rm -rf /var/lib/apt/lists/*

# Handle pre-installed pnpm to avoid EEXIST conflicts
RUN echo "ðŸ” Checking pnpm installation..." && \
    if command -v pnpm >/dev/null 2>&1; then \
        echo "ðŸ“‹ Pre-installed pnpm found: $(pnpm --version)"; \
        echo "ðŸ”§ Using pre-installed pnpm version"; \
    else \
        echo "ðŸ“¦ Installing pnpm..."; \
        npm install -g pnpm@10.13.1; \
    fi && \
    echo "âœ… pnpm version: $(pnpm --version)" && \
    echo "ðŸ”§ Ensuring global bin directory is in PATH..." && \
    echo 'export PATH="/opt/bitnami/node/bin:$PATH"' >> /etc/environment

# Set working directory
WORKDIR /app

# ===== DEPENDENCY STAGE =====
FROM base AS deps

# Copy package files for better caching
COPY package.json pnpm-lock.yaml ./

# Install dependencies only (no build yet)
RUN pnpm install --frozen-lockfile

# ===== BUILD STAGE =====
FROM base AS builder

# Build arguments for Sentry release tracking
ARG BUILD_BUILDNUMBER
ARG BUILD_SOURCEVERSION
ARG SENTRY_RELEASE
ARG NODE_ENV=production

# Set environment variables for build
ENV NODE_ENV=${NODE_ENV}
ENV BUILD_BUILDNUMBER=${BUILD_BUILDNUMBER}
ENV BUILD_SOURCEVERSION=${BUILD_SOURCEVERSION}
ENV SENTRY_RELEASE=${SENTRY_RELEASE}
ENV SENTRY_DISABLE_TELEMETRY=true

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY . .

# Build the application with release information
RUN pnpm build && \
    echo "ðŸ” Verifying build output..." && \
    ls -la dist/ && \
    ls -la dist/server/ && \
    if [ ! -f "dist/server/entry.mjs" ]; then \
        echo "âŒ Critical: Server entry point missing!"; \
        exit 1; \
    else \
        echo "âœ… Server entry point found"; \
    fi

# ===== PRODUCTION STAGE =====
FROM base AS production

# Create non-root user for security
RUN groupadd --gid 1001 astro && \
    useradd --uid 1001 --gid astro --shell /bin/bash --create-home astro

# Copy package files and install production dependencies freshly
COPY --from=builder --chown=astro:astro /app/package.json /app/pnpm-lock.yaml ./

# Install production dependencies with fresh node_modules
RUN pnpm install --frozen-lockfile --prod=false && \
    echo "ðŸ” Verifying pnpm installation in production..." && \
    ls -la node_modules/.bin/ | grep -E "(astro|pnpm)" && \
    which pnpm && pnpm --version

# Copy built application and scripts
COPY --from=builder --chown=astro:astro /app/dist ./dist
COPY --from=builder --chown=astro:astro /app/scripts ./scripts

# Copy the startup fallback script
COPY scripts/docker-startup-fallback.sh /app/startup-fallback.sh
RUN chmod +x /app/startup-fallback.sh && chown astro:astro /app/startup-fallback.sh

# Verify the build artifacts and dependencies
USER root
RUN echo "ðŸ” Verifying production stage setup..." && \
    ls -la /app/ && \
    echo "ðŸ“ dist directory contents:" && \
    ls -la /app/dist/ && \
    echo "ðŸ“ scripts directory contents:" && \
    ls -la /app/scripts/ && \
    echo "ðŸ”§ Checking pnpm availability:" && \
    which pnpm && pnpm --version && \
    echo "ðŸ“‹ Checking node_modules binaries:" && \
    ls -la /app/node_modules/.bin/ | head -20 && \
    echo "ðŸŽ¯ Verifying astro binary specifically:" && \
    ls -la /app/node_modules/.bin/astro && \
    echo "âœ… Production stage verification complete"
USER astro

# Set environment variables for production
ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=8080
ENV PATH="/opt/bitnami/node/bin:/app/node_modules/.bin:$PATH"

# Switch to non-root user
USER astro

# Expose the port (ensure this matches WEBSITES_PORT in Azure pipeline)
EXPOSE 8080

# Healthcheck to ensure the application is running and responsive
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl --fail http://localhost:8080/api/health/simple || node scripts/health-check.js || exit 1

# Create startup script with better error handling and PATH configuration
USER root
RUN echo '#!/bin/bash' > /app/startup.sh && \
    echo 'set -e' >> /app/startup.sh && \
    echo 'echo "ðŸš€ Starting Pixelated container..."' >> /app/startup.sh && \
    echo 'echo "ðŸ“‹ Environment check:"' >> /app/startup.sh && \
    echo 'echo "  Node version: $(node --version)"' >> /app/startup.sh && \
    echo 'echo "  pnpm version: $(pnpm --version)"' >> /app/startup.sh && \
    echo 'echo "  Working directory: $(pwd)"' >> /app/startup.sh && \
    echo 'echo "  User: $(whoami)"' >> /app/startup.sh && \
    echo 'echo "  PATH: $PATH"' >> /app/startup.sh && \
    echo 'echo "ðŸ“ Checking critical files:"' >> /app/startup.sh && \
    echo 'ls -la dist/server/entry.mjs || echo "âŒ Server entry missing"' >> /app/startup.sh && \
    echo 'ls -la scripts/start-server.js || echo "âŒ Start script missing"' >> /app/startup.sh && \
    echo 'ls -la package.json || echo "âŒ Package.json missing"' >> /app/startup.sh && \
    echo 'echo "ðŸ”§ Binary availability check:"' >> /app/startup.sh && \
    echo 'echo "  Standard binary check:"' >> /app/startup.sh && \
    echo 'which pnpm && echo "    âœ… pnpm found at: $(which pnpm)" || echo "    âŒ pnpm not found"' >> /app/startup.sh && \
    echo 'which astro && echo "    âœ… astro found at: $(which astro)" || echo "    âŒ astro not in PATH"' >> /app/startup.sh && \
    echo 'ls -la /app/node_modules/.bin/astro && echo "    âœ… astro binary exists in node_modules" || echo "    âŒ astro missing from node_modules"' >> /app/startup.sh && \
    echo 'ls -la /opt/bitnami/node/bin/pnpm && echo "    âœ… global pnpm exists" || echo "    âŒ global pnpm missing"' >> /app/startup.sh && \
    echo 'echo "ðŸ“‹ Available scripts in package.json:"' >> /app/startup.sh && \
    echo 'node -e "const pkg = require(\"./package.json\"); console.log(Object.keys(pkg.scripts).join(\", \"))" || echo "âŒ Cannot read scripts"' >> /app/startup.sh && \
    echo 'echo "ðŸŽ¯ Ensuring proper PATH and starting application..."' >> /app/startup.sh && \
    echo 'export PATH="/opt/bitnami/node/bin:/app/node_modules/.bin:$PATH"' >> /app/startup.sh && \
    echo 'echo "  Final PATH: $PATH"' >> /app/startup.sh && \
    echo 'echo "ðŸ” Final binary verification:"' >> /app/startup.sh && \
    echo 'which astro && echo "  âœ… astro available at: $(which astro)" || echo "  âŒ astro still not found!"' >> /app/startup.sh && \
    echo 'which pnpm && echo "  âœ… pnpm available at: $(which pnpm)" || echo "  âŒ pnpm still not found!"' >> /app/startup.sh && \
    echo 'echo "ðŸš€ Starting with pnpm start..."' >> /app/startup.sh && \
    echo '# Try main startup approach first' >> /app/startup.sh && \
    echo 'if pnpm start 2>/dev/null; then' >> /app/startup.sh && \
    echo '  echo "âœ… Application started successfully"' >> /app/startup.sh && \
    echo 'else' >> /app/startup.sh && \
    echo '  echo "âŒ Main startup failed, trying fallback approach..."' >> /app/startup.sh && \
    echo '  if [ -f "/app/startup-fallback.sh" ]; then' >> /app/startup.sh && \
    echo '    echo "ðŸ”„ Executing startup fallback script..."' >> /app/startup.sh && \
    echo '    exec /app/startup-fallback.sh' >> /app/startup.sh && \
    echo '  else' >> /app/startup.sh && \
    echo '    echo "âŒ Fallback script not found, startup failed"' >> /app/startup.sh && \
    echo '    exit 1' >> /app/startup.sh && \
    echo '  fi' >> /app/startup.sh && \
    echo 'fi' >> /app/startup.sh && \
    chmod +x /app/startup.sh && \
    chown astro:astro /app/startup.sh
USER astro

# Command to run the application in production mode
CMD ["/app/startup.sh"]